{
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.darwin": "/Users/nick.waywood/.dotfiles/vscode/vscode.vim",
  // This must be false for keys to work in file explorer with neovim plugin
  "workbench.list.automaticKeyboardNavigation": false,
  "editor.fontSize": 14,
  "editor.cursorBlinking": "solid",
  "editor.fontFamily": "'FiraMono Nerd Font', Menlo, Monaco, 'Courier New', monospace",
  "workbench.colorTheme": "One Dark Pro",
  "editor.lineNumbers": "on",
  "workbench.iconTheme": "file-icons",
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "vsicons.dontShowNewVersionMessage": true,
  "git.allowForcePush": true,
  // don't let fullscreen create a macOS desktop
  "window.nativeFullScreen": false,
  // soft wrapping
  "editor.wordWrap": "on",
  // "workbench.activityBar.visible": false,
  "workbench.editor.tabSizing": "shrink",
  // multi select with alt so that cmd+click goes to def
  "editor.multiCursorModifier": "alt",
  // don't auto highlight occurences on hover
  "editor.occurrencesHighlight": "off",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "explorer.confirmDragAndDrop": false,
  // only show colors for git changes and errors, not the numbers and letters
  "explorer.decorations.badges": false,
  // disable being able to drap and drop selected text within the editor
  "editor.dragAndDrop": false,
  // disable command-c copying the current line when no text is selected
  "editor.emptySelectionClipboard": false,
  "editor.renderLineHighlight": "gutter",
  "vsicons.presets.foldersAllDefaultIcon": true,
  "editor.renderLineHighlightOnlyWhenFocus": true,
  // smooth scrolling for ctrl-{f,b,d,u}
  "editor.smoothScrolling": true,
  "editor.formatOnPaste": true,
  "editor.snippetSuggestions": "bottom",
  // indent nested folder in explorer by 12 pixels (default 8)
  "workbench.tree.indent": 12,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  // when opening a project, open readme by default if it exists
  "workbench.startupEditor": "readme",
  // still show line numbers in zen mode
  "zenMode.hideLineNumbers": false,
  "window.title": "${rootName}${separator}${activeEditorMedium}",
  "terminal.integrated.fontSize": 14,
  "telemetry.enableTelemetry": false,
  // always automatically show intellisense suggestions
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  // hide spotify buttons
  "spotify.showNextButton": false,
  "spotify.showPreviousButton": false,
  "spotify.showMuteUnmuteVolumeButton": false,
  "spotify.showLyricsButton": false,
  "spotify.showPlayPauseButton": false,
  "spotify.showSignInButton": false,
  "spotify.showSignOutButton": false,
  // errorLens
  // ---------
  "errorLens.gutterIconsEnabled": true,
  "errorLens.gutterIconSet": "circle",
  "errorLens.gutterIconSize": "90%",
  "errorLens.statusBarMessageEnabled": true,
  "errorLens.statusBarColorsEnabled": true,
  "errorLens.delay": 10,
  // don't show the error message inline
  "errorLens.messageEnabled": false,
  // gitlens
  // -------
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  // don't show git blame info for current line in the status bar
  "gitlens.statusBar.enabled": false,
  // hide the buttons that gintlens adds to the top right of editors
  "gitlens.menus": {
    "editorGroup": {
      "blame": false,
      "compare": false
    }
  },
  "settings.cycle": [
    {
      "id": "relativeLineNumbers", // must be unique
      "overrideWorkspaceSettings": false,
      "values": [
        {
          "editor.lineNumbers": "on"
        },
        {
          "editor.lineNumbers": "relative"
        }
      ]
    }
  ],
  // Reason
  // ------
  // "reason.formatOnSave": true,
  // eslint and prettier
  "prettier.tabWidth": 4,
  "prettier.semi": false,
  "kotlin.compiler.jvm.target": "1.8",
  "go.formatTool": "goimports",
  "go.useLanguageServer": true,
  "haskell.formattingProvider": "floskell",
  "[haskell]": {
    "editor.defaultFormatter": "haskell.haskell"
  },
  "haskell.languageServerVariant": "haskell-ide-engine",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.watcherExclude": {
    "**/.bloop": true,
    "**/.metals": true,
    "**/.ammonite": true
  },
  "ruby.useLanguageServer": true,
  "git.confirmSync": false,
  "editor.bracketPairColorization.enabled": true,
  "metals.javaHome": "/opt/homebrew/opt/openjdk@11",
  // don't show indent guides in the editor
  "editor.guides.indentation": false,
  "window.newWindowDimensions": "maximized",
  "editor.padding.top": 4,
  "breadcrumbs.enabled": true,
  // turn off filepath in breadcrumbs since I display it in "window.title" instead
  "breadcrumbs.filePath": "off",
  "redhat.telemetry.enabled": false,
  "githubPullRequests.pullBranch": "never",
  "metals.enableSemanticHighlighting": false,
  "editor.accessibilitySupport": "off",
  "explorer.openEditors.visible": 1,
  "window.customTitleBarVisibility": "never"
}